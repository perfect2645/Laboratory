<UserControl x:Class="NetLaboratory.View.TaskPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NetLaboratory.View"
             xmlns:localVm="clr-namespace:NetLaboratory.ViewModel">
    <UserControl.DataContext>
        <localVm:TaskPageViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Button Command="{Binding CounterCommand}" Content="Counter" />
    </Grid>
</UserControl>
