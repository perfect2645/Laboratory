<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WpfControls.MaterialDesign.Buttons">

    <!-- 基础按钮样式 -->
    <Style x:Key="BaseButtonStyle" TargetType="Button">
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>

        <!-- 基础触发器 -->
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity" Value="0.9"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Opacity" Value="0.8"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.5"/>
                <Setter Property="Cursor" Value="Arrow"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- 主要按钮模板 -->
    <DataTemplate x:Key="PrimaryButtonTemplate" DataType="{x:Type local:ThemableButtonViewModel}">
        <Button Style="{StaticResource BaseButtonStyle}" 
                Content="{Binding Content}"
                Background="#0078D7" 
                Foreground="White"/>
    </DataTemplate>

    <!-- 次要按钮模板 -->
    <DataTemplate x:Key="SecondaryButtonTemplate" DataType="{x:Type local:ThemableButtonViewModel}">
        <Button Style="{StaticResource BaseButtonStyle}" 
                Content="{Binding Content}"
                Background="#6B7280" 
                Foreground="White"/>
    </DataTemplate>

    <!-- 危险按钮模板 -->
    <DataTemplate x:Key="DangerButtonTemplate" DataType="{x:Type local:ThemableButtonViewModel}">
        <Button Style="{StaticResource BaseButtonStyle}" 
                Content="{Binding Content}"
                Background="#E51400" 
                Foreground="White"/>
    </DataTemplate>

    <!-- 成功按钮模板 -->
    <DataTemplate x:Key="SuccessButtonTemplate" DataType="{x:Type local:ThemableButtonViewModel}">
        <Button Style="{StaticResource BaseButtonStyle}" 
                Content="{Binding Content}"
                Background="#107C10" 
                Foreground="White"/>
    </DataTemplate>

    <!-- 信息按钮模板 -->
    <DataTemplate x:Key="InfoButtonTemplate" DataType="{x:Type local:ThemableButtonViewModel}">
        <Button Style="{StaticResource BaseButtonStyle}" 
                Content="{Binding Content}"
                Background="#0066CC" 
                Foreground="White"/>
    </DataTemplate>

    <!-- 按钮模板选择器 -->
    <local:ButtonTemplateSelector x:Key="ButtonTemplateSelector"
        PrimaryTemplate="{StaticResource PrimaryButtonTemplate}"
        SecondaryTemplate="{StaticResource SecondaryButtonTemplate}"
        DangerTemplate="{StaticResource DangerButtonTemplate}"
        SuccessTemplate="{StaticResource SuccessButtonTemplate}"
        InfoTemplate="{StaticResource InfoButtonTemplate}"/>
</ResourceDictionary>
