<UserControl x:Class="WpfWidgets.popup.NotificationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:WpfWidgets.popup"
             x:Name="NotificationBarCtrl">
    <Grid>
        <materialDesign:Snackbar x:Name="MySnackbar"
            MessageQueue="{Binding MessageQueue, ElementName=NotificationBarCtrl}"
                        FontSize="{Binding FontSize,ElementName=NotificationBarCtrl}"
                        VerticalContentAlignment="Center"
        />
    </Grid>
</UserControl>
